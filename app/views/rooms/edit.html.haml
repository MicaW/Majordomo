%form{"data-toggle" => "validator", :role => "form"}

.container.booking-forms
  .row
    .col-md-12
      %h2#form-title= 'Edit Room'
  .row
    = form_for @room do |f|
      .col-md-12
        .form-group
          = f.label :name
          = f.text_field :name, :class => 'form-control', placeholder: 'Name of room', autofocus: true, :required => ""
          = f.submit 'Update', :class => 'btn btn-primary', :id => 'update-button'
