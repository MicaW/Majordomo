.container
  .row
    .col-md-12
      - if @bookings.any?
        - @bookings.each do |booking|
          %h2= link_to booking.name, booking_path(booking)
          %h4= booking.description
          %h6= booking.start_time.strftime('%e %B %Y, %H:%M')
          %h6= booking.end_time.strftime('%e %B %Y, %H:%M')
      - else
        %h1 No bookings yet
.container
  .row
    .col-md-12
      %a{:href => new_booking_path }
        %button.btn.btn-primary
          Create booking
          %i.fa.fa-calendar{"aria-hidden" => "true"}
.container.calendar
  .row
    .col-md-12
      %h2#calendar-title= 'Current bookings'
      = week_calendar events: @bookings do |date, bookings|
        = date
        - bookings.each do |booking|
          %div
            = link_to booking.name, booking_path(booking)
            %br
            = booking.start_time.strftime('%H:%M')
            = ' - '
            = booking.end_time.strftime('%H:%M')
